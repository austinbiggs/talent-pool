{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@talent/frontend*": ["apps/talent-pool/frontend/src/*"],
      "@talent/db*": ["apps/talent-pool/db/src/*"],
      "talent:db*": ["apps/talent-pool/db/src/*"],
      "talent:frontend": ["apps/talent-pool/frontend/src/*"],
      "@talent/gql": ["libs/gql/src/index.ts"],
      "lib:db": ["apps/talent-pool/db/src/*"],
      "lib:gql": ["libs/gql/src/index.ts"]
    }
  }
}
